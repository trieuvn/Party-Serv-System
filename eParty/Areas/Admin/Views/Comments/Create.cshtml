@model eParty.Models.Comment

@{
    ViewBag.Title = "Create New Comment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Comment Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Dashboard")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "Comments")">Comments</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Create</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Comments", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header"><div class="card-title">Add New Comment</div></div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <!-- User Dropdown -->
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.User, "User", new { @class = "form-label" })
                                @Html.DropDownListFor(model => model.User, (SelectList)ViewBag.UserId, "--- Select User ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- News Dropdown -->
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.News, "News", new { @class = "form-label" })
                                @Html.DropDownListFor(model => model.News, (SelectList)ViewBag.NewsId, "--- Select News ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.News, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Stars -->
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Stars, new { @class = "form-label" })
                                @Html.EditorFor(model => model.Stars, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "e.g., 5" } })
                                @Html.ValidationMessageFor(model => model.Stars, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "form-label" })
                                @Html.TextAreaFor(model => model.Description, 5, 1, new { @class = "form-control", placeholder = "Enter comment content" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-action">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a href="@Url.Action("Index")" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
