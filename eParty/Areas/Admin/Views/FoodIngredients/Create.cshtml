@model eParty.Models.FoodIngredient

@{
    ViewBag.Title = "Add Ingredient to Food";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Recipe Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Dashboard")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "FoodIngredient")">Recipes</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Create</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header"><div class="card-title">Define Ingredient for Food</div></div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Food, "Food", new { @class = "form-label" })
                                @Html.DropDownList("Food", null, "--- Select a Food ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Food, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ingredient, "Ingredient", new { @class = "form-label" })
                                @Html.DropDownList("Ingredient", null, "--- Select an Ingredient ---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Ingredient, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Amount, new { @class = "form-label" })
                                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g., 200g, 1 unit, 50ml" } })
                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-success">Add Ingredient</button>
                    <a href="@Url.Action("Index")" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>