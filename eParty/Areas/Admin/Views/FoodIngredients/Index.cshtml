@model IEnumerable<eParty.Models.FoodIngredient>

@{
    ViewBag.Title = "Recipe Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Food Ingredient List</h4>
                <a href="@Url.Action("Create")" class="btn btn-primary btn-round ms-auto">
                    <i class="fa fa-plus"></i>
                    Add Ingredient to Food
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="foodingredient-datatables" class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FoodRef.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.IngredientRef.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Amount)</th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FoodRef.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.IngredientRef.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                <td>
                                    <div class="form-button-action">
                                        @* Chú ý cách truyền 2 tham số cho khóa chính σύνθετη *@
                                        <a href="@Url.Action("Edit", new { foodId = item.Food, ingredientId = item.Ingredient })" data-bs-toggle="tooltip" title="Edit Amount" class="btn btn-link btn-primary btn-lg">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { foodId = item.Food, ingredientId = item.Ingredient })" data-bs-toggle="tooltip" title="Details" class="btn btn-link btn-info btn-lg">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { foodId = item.Food, ingredientId = item.Ingredient })" data-bs-toggle="tooltip" title="Remove" class="btn btn-link btn-danger">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#foodingredient-datatables').DataTable({
                "pageLength": 10,
            });
        });
    </script>
}