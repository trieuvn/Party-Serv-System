@model eParty.Models.FoodIngredient

@{
    ViewBag.Title = "Recipe Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Recipe Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Dashboard")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "FoodIngredient")">Recipes</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Details</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header"><div class="card-title">Recipe Details</div></div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FoodRef.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FoodRef.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IngredientRef.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IngredientRef.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Amount)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Amount)</dd>
                </dl>
            </div>
            <div class="card-action">
                <a href="@Url.Action("Edit", new { foodId = Model.Food, ingredientId = Model.Ingredient })" class="btn btn-primary">Edit Amount</a>
                <a href="@Url.Action("Index")" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</div>