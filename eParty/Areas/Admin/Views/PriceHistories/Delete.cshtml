@model eParty.Models.PriceHistory
@{
    ViewBag.Title = "Delete Price History";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Price History Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Dashboard")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "PriceHistories")">Price History</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Delete</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Confirm Deletion</div>
            </div>

            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this price record? This action cannot be undone.
                </div>
                <hr />

                <dl class="row">
                    <!-- Food -->
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FoodRef.Name)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">@Html.DisplayFor(model => model.FoodRef.Name)</span>
                    </dd>

                    <!-- Party -->
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PartyRef.Name)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info text-dark">@Html.DisplayFor(model => model.PartyRef.Name)</span>
                    </dd>

                    <!-- Cost -->
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cost)</dt>
                    <dd class="col-sm-9">
                        <strong class="text-success">@string.Format("{0:N0} VND", Model.Cost)</strong>
                    </dd>

                    <!-- Amount -->
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Amount)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-secondary">@Html.DisplayFor(model => model.Amount)</span>
                    </dd>

                    <!-- Tổng tiền -->
                    <dt class="col-sm-3">Total Value</dt>
                    <dd class="col-sm-9">
                        <strong class="text-primary">@string.Format("{0:N0} VND", (Model.Cost * Model.Amount))</strong>
                    </dd>
                </dl>
            </div>

            <div class="card-action">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        Yes, Delete
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        Cancel
                    </a>
                }
            </div>
        </div>
    </div>
</div>