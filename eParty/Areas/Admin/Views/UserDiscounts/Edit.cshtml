@model eParty.Models.UserDiscount

@{
    ViewBag.Title = "Edit User Discount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">User Discount Management</h3>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "UserDiscounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.User)
            @Html.HiddenFor(m => m.Discount)

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Edit Discount for: @Model.UserRef.Username</div>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-3">
                        <label class="form-label">User</label>
                        <input type="text" class="form-control" value="@Model.UserRef.Username" disabled />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Discount</label>
                        <input type="text" class="form-control" value="@Model.DiscountRef.CouponCode" disabled />
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Amount, new { @class = "form-label" })
                        @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="card-action">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a href="@Url.Action("Index", "UserDiscounts")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        }
    </div>
</div>
