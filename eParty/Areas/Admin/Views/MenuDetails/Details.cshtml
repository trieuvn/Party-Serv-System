@model eParty.Models.MenuDetail
@{
    ViewBag.Title = "Menu Detail Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Menu Detail Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "MenuDetails")">Menu Details</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Details</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    Details for: <strong>@Model.FoodRef.Name</strong> in <strong>@Model.MenuRef.Name</strong>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Hình ảnh món ăn (nếu có) -->
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.FoodRef.Image))
                        {
                            <img src="data:image/jpeg;base64,@Model.FoodRef.Image"
                                 alt="@Model.FoodRef.Name"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-light border rounded d-flex align-items-center justify-content-center text-muted"
                                 style="height: 200px; font-size: 0.9rem;">
                                No Image
                            </div>
                        }
                    </div>

                    <!-- Thông tin chi tiết -->
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4 fw-bold">Food</dt>
                            <dd class="col-sm-8">@Model.FoodRef.Name</dd>

                            <dt class="col-sm-4 fw-bold">Menu</dt>
                            <dd class="col-sm-8">@Model.MenuRef.Name</dd>

                            <dt class="col-sm-4 fw-bold">Amount</dt>
                            <dd class="col-sm-8">@Model.Amount @Model.FoodRef.Unit</dd>

                            <dt class="col-sm-4 fw-bold">Unit Price</dt>
                            <dd class="col-sm-8">
                                @if (Model.FoodRef.Discount > 0)
                                {
                                    <span class="text-decoration-line-through text-muted me-2">
                                        @String.Format("{0:N0}", Model.FoodRef.Cost) VND
                                    </span>
                                    <span class="text-danger fw-bold">
                                        @String.Format("{0:N0}", Model.FoodRef.Cost * (1 - Model.FoodRef.Discount / 100)) VND
                                    </span>
                                    <small class="badge bg-success ms-1">Save @Model.FoodRef.Discount%</small>
                                }
                                else
                                {
                                    <span>@String.Format("{0:N0}", Model.FoodRef.Cost) VND</span>
                                }
                            </dd>

                            <dt class="col-sm-4 fw-bold">Total Cost</dt>
                            <dd class="col-sm-8 fw-bold text-primary">
                                @{
                                    var total = Model.Amount * Model.FoodRef.Cost * (1 - Model.FoodRef.Discount / 100m);
                                }
                                @String.Format("{0:N0}", total) VND
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Mô tả món ăn (nếu có) -->
                @if (!string.IsNullOrWhiteSpace(Model.FoodRef.Description))
                {
                    <hr />
                    <h5 class="mt-3">Description</h5>
                    <p class="text-muted">@Model.FoodRef.Description</p>
                }
            </div>

            <div class="card-action">
                <a href="@Url.Action("Edit", new { menuId = Model.Menu, foodId = Model.Food })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-info">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>