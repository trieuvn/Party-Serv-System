@model eParty.Models.MenuDetail
@{
    ViewBag.Title = "Delete Menu Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Menu Detail Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "MenuDetails")">Menu Details</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Delete</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Confirm Deletion</div>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this menu detail? This action cannot be undone.
                </div>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MenuRef.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.MenuRef.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FoodRef.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.FoodRef.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Amount)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Amount)</dd>
                </dl>
            </div>

            <div class="card-action">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </div>
    </div>
</div>