@model eParty.Models.MenuDetail
@{
    ViewBag.Title = "Edit Menu Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Menu Detail Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "MenuDetails")">Menu Details</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Edit</a></li>
    </ul>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "MenuDetails", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        Edit Amount: <strong>@Model.FoodRef.Name</strong> in <strong>@Model.MenuRef.Name</strong>
                    </div>
                </div>

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Ẩn khóa chính (Menu, Food) -->
                    @Html.HiddenFor(m => m.Menu)
                    @Html.HiddenFor(m => m.Food)

                    <div class="row">
                        <!-- Hiển thị thông tin món ăn (read-only) -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Food</label>
                                <input type="text" value="@Model.FoodRef.Name" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Menu</label>
                                <input type="text" value="@Model.MenuRef.Name" class="form-control" readonly />
                            </div>
                        </div>

                        <!-- Chỉnh sửa Amount -->
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Amount, new { @class = "form-label" })
                                @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", placeholder = "Enter amount" } })
                                @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Hiển thị đơn vị -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-bold">Unit</label>
                                <input type="text" value="@Model.FoodRef.Unit" class="form-control" readonly />
                            </div>
                        </div>

                        <!-- Tổng tiền (tính tự động) -->
                        <div class="col-md-12 mt-3">
                            <div class="alert alert-info">
                                <strong>Total Cost:</strong>
                                @{
                                    var finalPrice = Model.FoodRef.Cost * (1 - Model.FoodRef.Discount / 100m);
                                    var total = Model.Amount * finalPrice;
                                }
                                <span class="fw-bold text-primary">
                                    @String.Format("{0:N0}", total) VND
                                </span>
                                @if (Model.FoodRef.Discount > 0)
                                {
                                    <span class="badge bg-success ms-2">Save @Model.FoodRef.Discount%</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-action">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        }
    </div>
</div>