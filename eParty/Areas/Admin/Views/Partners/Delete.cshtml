@model eParty.Models.Partner
@{
    ViewBag.Title = "Delete Partner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Partner Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "Partners")">Partners</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Delete</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Confirm Deletion</div>
            </div>

            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this partner? This action cannot be undone.
                </div>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Subject)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-9">
                        @if (Model.Description != null && Model.Description.Length > 200)
                        {
                            @Html.Raw(Model.Description.Substring(0, 200) + "...")
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.Description)
                        }
                    </dd>
                </dl>
            </div>

            <div class="card-action">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Yes, Delete
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                }
            </div>
        </div>
    </div>
</div>