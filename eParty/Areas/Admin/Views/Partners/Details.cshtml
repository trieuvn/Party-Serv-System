@model eParty.Models.Partner
@{
    ViewBag.Title = "Partner Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<<div class="page-header">
    <h3 class="fw-bold mb-3">Partner Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i></a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="@Url.Action("Index", "Partners")">Partners</a></li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Details</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Details for: <strong>@Model.Name</strong></div>
            </div>

            <div class="card-body">
                <div class="row">
                    <!-- Thông tin chi tiết -->
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-3 fw-bold">Name</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3 fw-bold">Subject</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-primary">@Model.Subject</span>
                            </dd>

                            <dt class="col-sm-3 fw-bold">Description</dt>
                            <dd class="col-sm-9">
                                @if (!string.IsNullOrWhiteSpace(Model.Description))
                                {
                                    <p class="text-muted mb-0">@Model.Description</p>
                                }
                                else
                                {
                                    <em class="text-muted">No description provided.</em>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="card-action">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Partner
                </a>
                <a href="@Url.Action("Index")" class="btn btn-info">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>