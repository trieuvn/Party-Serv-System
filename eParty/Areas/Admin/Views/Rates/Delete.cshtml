@model eParty.Models.Rate

@{
    ViewBag.Title = "Delete Rate";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h3 class="fw-bold mb-3">Rate Management</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a href="@Url.Action("Index", "Dashboard")"><i class="icon-home"></i></a>
        </li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item">
            <a href="@Url.Action("Index", "Rates")">Rates</a>
        </li>
        <li class="separator"><i class="icon-arrow-right"></i></li>
        <li class="nav-item"><a href="#">Delete</a></li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <div class="card-title">Confirm Deletion</div>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this rating? This action cannot be undone.
                </div>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3">User</dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.UserRef.Username)
                    </dd>

                    <dt class="col-sm-3">Party</dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PartyRef.Name)
                    </dd>

                    <dt class="col-sm-3">Stars</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-warning text-dark">
                            @Html.DisplayFor(model => model.Stars) ★
                        </span>
                    </dd>

                    <dt class="col-sm-3">Comment</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Comment))
                        {
                            <em>@Html.DisplayFor(model => model.Comment)</em>
                        }
                        else
                        {
                            <span class="text-muted">No comment</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-action">
                @using (Html.BeginForm("DeleteConfirmed", "Rates", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @* Gửi các tham số cần thiết cho action *@
                    @Html.Hidden("user", Model.User)
                    @Html.Hidden("party", Model.Party)

                    <button type="submit" class="btn btn-danger">
                        <i class="icon-trash"></i> Yes, Delete
                    </button>
                    <a href="@Url.Action("Index", "Rates")" class="btn btn-secondary">
                        <i class="icon-close"></i> Cancel
                    </a>
                }
            </div>
        </div>
    </div>
</div>
