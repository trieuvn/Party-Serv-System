@model IEnumerable<eParty.Models.News>

@{
    ViewBag.Title = "News Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h4 class="card-title">News List</h4>
            <a href="@Url.Action("Create")" class="btn btn-primary btn-round ms-auto">
                <i class="fa fa-plus"></i> Create New
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="news-datatables" class="display table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Description</th>
                            <th>Author</th>
                            <th>Created Date</th>
                            <th>Status</th>
                            <th style="width: 15%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="data:image/jpeg;base64,@item.Image" alt="@item.Name"
                                             class="rounded" style="width: 80px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="~/AssetsAdmin/img/no-image.png" alt="No Image"
                                             class="rounded" style="width: 80px; height: 60px; object-fit: cover;" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Subject</td>
                                <td>@(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)</td>
                                <td>@(item.Author != null ? item.Author.GetFullName() : item.User ?? "Unknown")</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.Status == "Published")
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                </td>
                                <td>

                                    <div class="d-flex gap-1">
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info" title="Details">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#news-datatables').DataTable({
                "pageLength": 5,
                "lengthMenu": [5, 10, 20],
                "columnDefs": [
                    { "orderable": false, "targets": [0, 7] } // Image + Actions không sắp xếp
                ]
            });
        });
    </script>
}
