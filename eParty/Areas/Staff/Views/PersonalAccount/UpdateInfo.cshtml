@model eParty.Models.ApplicationUser
@{
    ViewBag.Title = "Cập nhật thông tin cá nhân";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutStaff.cshtml";
}

<h2>Cập nhật thông tin cá nhân</h2>

<form asp-action="UpdateProfile" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label>Email</label>
        <input type="email" class="form-control" value="@Model.Email" disabled />
    </div>
    <div class="mb-3">
        <label>Số điện thoại</label>
        <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật thông tin</button>
</form>
