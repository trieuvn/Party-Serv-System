@model eParty.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eParty</title>

    <!-- Style chính -->
    <link rel="stylesheet" href="~/Content/login/style.css">

    <style>
        /* Toàn trang */
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            background: url('@Url.Content("~/Content/login/bg-auth.jpg")') no-repeat center center/cover;
        }

        /* Layer particle ở trên */
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        /* Form */
        .wrapper {
            position: relative;
            z-index: 2; /* nằm trên particle */
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 40px 30px;
            width: 350px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

            .wrapper h2 {
                text-align: center;
                margin-bottom: 10px;
                color: #fff;
            }

        .input-field {
            position: relative;
            margin-top: 20px;
        }

            .input-field input {
                width: 100%;
                padding: 10px;
                border: none;
                border-bottom: 2px solid #1E90FF;
                background: transparent;
                color: #fff;
                outline: none;
                font-size: 16px;
            }

            .input-field label {
                position: absolute;
                top: 10px;
                left: 5px;
                color: #ccc;
                pointer-events: none;
                transition: 0.3s ease;
            }

            .input-field input:focus ~ label,
            .input-field input:valid ~ label {
                top: -10px;
                font-size: 13px;
                color: #1E90FF;
            }

        button {
            width: 100%;
            margin-top: 25px;
            padding: 10px;
            background: linear-gradient(90deg, #1E90FF, #00BFFF);
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.3s ease;
        }

            button:hover {
                transform: scale(1.03);
                background: linear-gradient(90deg, #00BFFF, #1E90FF);
            }

        .register {
            text-align: center;
            margin-top: 25px;
        }

            .register a {
                color: #00BFFF;
                text-decoration: none;
            }

        .text-danger {
            color: #ff3860;
            font-size: 0.875em;
            text-align: left;
            width: 100%;
            display: block;
            padding-left: 5px;
            margin-top: 5px;
        }

        .validation-summary-errors {
            color: #ff3860;
            text-align: center;
            list-style: none;
            padding: 0;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <!-- Lớp particle -->
    <div id="particles-js"></div>

    <!-- Form -->
    <div class="wrapper">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h2>@ViewBag.Title</h2>
            <h4 style="color: #ccc; text-align: center; font-weight: 500; margin-top: -10px; margin-bottom: 20px;">
                Nhập email của bạn.
            </h4>

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="input-field">
                @Html.TextBoxFor(m => m.Email, new { required = "required", autocomplete = "email" })
                @Html.LabelFor(m => m.Email, "Nhập địa chỉ email")
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            <button type="submit">Gửi liên kết</button>

            <div class="register">
                <p>Nhớ mật khẩu? @Html.ActionLink("Đăng nhập", "Login", "Account")</p>
            </div>
        }
    </div>

    <!-- Particle.js -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        /* === Particle Config === */
        particlesJS("particles-js", {
            particles: {
                number: { value: 60 },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.4 },
                size: { value: 3 },
                line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.3, width: 1 },
                move: { enable: true, speed: 1.5 }
            },
            interactivity: {
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" }
                }
            },
            retina_detect: true
        });
    </script>
</body>
</html>
