@model eParty.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Đặt Lại Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eParty</title>
    <link rel="stylesheet" href="~/Content/login/style.css">

    <!-- CSS nội tuyến để hiển thị lỗi validation -->
    <style>
        .text-danger {
            color: #ff3860;
            font-size: 0.875em;
            text-align: left;
            width: 100%;
            display: block;
            padding-left: 5px;
            margin-top: 5px;
        }

        .validation-summary-errors {
            color: #ff3860;
            text-align: center;
            list-style: none;
            padding: 0;
            margin-bottom: 15px;
        }

        /* Đảm bảo particles nền hiển thị đúng */
        #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
        }
    </style>
</head>
<body>
    <!-- Hiệu ứng particles nền -->
    <div id="particles-js"></div>

    <div class="wrapper">

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Code)

            <h2>@ViewBag.Title</h2>
            <h4 style="color: #ccc; text-align: center; font-weight: 500; margin-top: -10px; margin-bottom: 20px;">
                Tạo mật khẩu mới của bạn.
            </h4>

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="input-field">
                @Html.TextBoxFor(m => m.Email, new { required = "required", autocomplete = "email" })
                @Html.LabelFor(m => m.Email, "Email của bạn")
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            <div class="input-field" style="margin-top: 15px;">
                @Html.PasswordFor(m => m.Password, new { required = "required", autocomplete = "new-password" })
                @Html.LabelFor(m => m.Password, "Mật khẩu mới")
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

            <div class="input-field" style="margin-top: 15px;">
                @Html.PasswordFor(m => m.ConfirmPassword, new { required = "required", autocomplete = "new-password" })
                @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu mới")
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

            <button type="submit" style="margin-top: 20px;">Đặt Lại</button>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <!-- Thêm script hiệu ứng particles -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>
        particlesJS("particles-js", {
            "particles": {
                "number": { "value": 80, "density": { "enable": true, "value_area": 800 } },
                "color": { "value": "#ffffff" },
                "shape": { "type": "circle" },
                "opacity": { "value": 0.5, "random": false },
                "size": { "value": 3, "random": true },
                "line_linked": {
                    "enable": true,
                    "distance": 150,
                    "color": "#ffffff",
                    "opacity": 0.4,
                    "width": 1
                },
                "move": {
                    "enable": true,
                    "speed": 3,
                    "direction": "none",
                    "out_mode": "out"
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": { "enable": true, "mode": "repulse" },
                    "onclick": { "enable": true, "mode": "push" },
                    "resize": true
                },
                "modes": {
                    "repulse": { "distance": 100, "duration": 0.4 },
                    "push": { "particles_nb": 4 }
                }
            },
            "retina_detect": true
        });
    </script>
</body>
</html>
