@{
    ViewBag.Title = "Đăng Nhập Thất Bại";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eParty</title>
    <link rel="stylesheet" href="~/Content/login/style.css">
    <link rel="stylesheet" href="~/Content/login/SharedMessageTemplate.css">

    <style>
        /* Đảm bảo nền full màn hình */
        body {
            margin: 0;
            overflow: hidden;
        }

        #particles-js {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .wrapper {
            position: relative;
            z-index: 2;
            backdrop-filter: blur(15px);
            background: rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.3);
            padding: 40px;
            max-width: 400px;
            margin: 10% auto;
            text-align: center;
            color: white;
        }

        h2 {
            color: #ff6b6b;
            margin-bottom: 10px;
        }

        h3 {
            color: #ddd;
            margin-bottom: 25px;
            font-weight: 400;
        }

        a {
            color: #4dabf7;
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Hiệu ứng nền động -->
    <div id="particles-js"></div>

    <div class="wrapper">
        <h2>@ViewBag.Title</h2>
        <h3>Đăng nhập không thành công với dịch vụ.</h3>
        <p>
            @Html.ActionLink("Quay lại trang Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { style = "color:#4dabf7;" })
        </p>
    </div>

    <!-- Thư viện Particles.js -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script>
        /* Cấu hình particles */
        particlesJS("particles-js", {
            particles: {
                number: { value: 50 },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.4 },
                size: { value: 2 },
                move: { enable: true, speed: 1 }
            },
            interactivity: {
                events: {
                    onhover: { enable: true, mode: "repulse" }
                }
            },
            retina_detect: true
        });
    </script>
</body>
</html>
