@model eParty.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eParty</title>

    <!-- CSS chung (đã chứa nền + blur + particle-ready) -->
    <link rel="stylesheet" href="~/Content/login/style.css">

    <!-- Thư viện hiệu ứng particle -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

    <style>
        .text-danger {
            color: #ff3860;
            font-size: 0.875em;
            text-align: left;
            width: 100%;
            display: block;
            padding-left: 5px;
            margin-top: 5px;
        }

        .validation-summary-errors {
            color: #ff3860;
            text-align: center;
            list-style: none;
            padding: 0;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <!-- Lớp nền + particle -->
    <div id="particles-js"></div>

    <!-- Khung đăng ký -->
    <div class="wrapper">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <h2>@ViewBag.Title</h2>
            <h4 style="color: #ccc; text-align: center; font-weight: 500; margin-top: -10px; margin-bottom: 20px;">
                Tạo tài khoản mới
            </h4>

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <!-- Email -->
            <div class="input-field">
                @Html.TextBoxFor(m => m.Email, new { required = "required", autocomplete = "email", type = "email" })
                @Html.LabelFor(m => m.Email, "Nhập địa chỉ email")
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <!-- Password -->
            <div class="input-field">
                @Html.PasswordFor(m => m.Password, new { required = "required", autocomplete = "new-password" })
                @Html.LabelFor(m => m.Password, "Nhập mật khẩu")
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <!-- Confirm Password -->
            <div class="input-field">
                @Html.PasswordFor(m => m.ConfirmPassword, new { required = "required", autocomplete = "new-password" })
                @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu")
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <!-- First Name -->
            <div class="input-field">
                @Html.TextBoxFor(m => m.FirstName, new { required = "required" })
                @Html.LabelFor(m => m.FirstName, "Họ")
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <!-- Last Name -->
            <div class="input-field">
                @Html.TextBoxFor(m => m.LastName, new { required = "required" })
                @Html.LabelFor(m => m.LastName, "Tên")
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>


            <!-- Phone Number -->
            <div class="input-field">
                @Html.TextBoxFor(m => m.PhoneNumber, new { required = "required", type = "tel" })
                @Html.LabelFor(m => m.PhoneNumber, "Số điện thoại")
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>

            <!-- Avatar -->
            <div class="input-field">
                <input type="file" id="avatar" name="avatar" accept="image/*" />
            </div>

            <button type="submit" style="margin-top: 15px;">Đăng Ký</button>

            <div class="register" style="margin-top: 20px;">
                <p>Bạn đã có tài khoản? @Html.ActionLink("Đăng nhập ngay", "Login", "Account")</p>
            </div>
        }
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        /* === Particle Config === */
        particlesJS("particles-js", {
            particles: {
                number: { value: 60 },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.4 },
                size: { value: 3 },
                line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.3, width: 1 },
                move: { enable: true, speed: 1.5 }
            },
            interactivity: {
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" }
                }
            },
            retina_detect: true
        });
    </script>
</body>
</html>
