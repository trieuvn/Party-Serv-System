@{
    ViewBag.Title = "Xác Nhận Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eParty</title>

    <link rel="stylesheet" href="~/Content/login/style.css">
    <link rel="stylesheet" href="~/Content/login/SharedMessageTemplate.css">

    <style>
        /* Nền toàn trang */
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            background: url('@Url.Content("~/Content/login/bg-auth.jpg")') no-repeat center center/cover;
        }

        /* Particle layer */
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        /* Hộp nội dung */
        .wrapper {
            position: relative;
            z-index: 2; /* nằm trên particle */
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 40px 30px;
            width: 360px;
            color: #fff;
            text-align: center;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
        }

            .wrapper h2 {
                margin-bottom: 15px;
                color: #fff;
            }

            .wrapper p {
                font-size: 16px;
                color: #e0e0e0;
                margin-bottom: 15px;
                line-height: 1.5;
            }

            .wrapper a {
                color: #00BFFF;
                font-weight: 600;
                text-decoration: none;
                transition: 0.3s;
            }

                .wrapper a:hover {
                    color: #1E90FF;
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <!-- Particle nền -->
    <div id="particles-js"></div>

    <!-- Nội dung -->
    <div class="wrapper">
        <h2>@ViewBag.Title</h2>
        <div>
            <p>Vui lòng kiểm tra email của bạn để đặt lại mật khẩu.</p>
            <p>@Html.ActionLink("Quay lại trang Đăng nhập", "Login", "Account")</p>
        </div>
    </div>

    <!-- Particle.js -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script>
        /* === Particle Config === */
        particlesJS("particles-js", {
            particles: {
                number: { value: 60 },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.4 },
                size: { value: 3 },
                line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.3, width: 1 },
                move: { enable: true, speed: 1.5 }
            },
            interactivity: {
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" }
                }
            },
            retina_detect: true
        });
    </script>
</body>
</html>
