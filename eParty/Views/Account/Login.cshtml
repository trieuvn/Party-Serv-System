﻿@using eParty.Models 
@model LoginViewModel 
@{ViewBag.Title = "Đăng Nhập"; Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eParty</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/login/style.css">

    <!-- Thêm thư viện particles.js -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
</head>
<body>
    <!-- Hiệu ứng particle -->
    <div id="particles-js"></div>

    <div class="wrapper" >
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2>Đăng Nhập</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="input-field">
                @Html.TextBoxFor(m => m.Email, new { required = "required", autocomplete = "email" })
                @Html.LabelFor(m => m.Email, "Nhập địa chỉ email của bạn")
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            <div class="input-field">
                @Html.PasswordFor(m => m.Password, new { required = "required", autocomplete = "current-password" })
                @Html.LabelFor(m => m.Password, "Nhập mật khẩu của bạn")
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

            <div class="forget">
                <label for="RememberMe">
                    @Html.CheckBoxFor(m => m.RememberMe, new { id = "RememberMe" }) Nhớ tôi
                </label>
                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword", "Account")
            </div>

            <button type="submit">Đăng Nhập</button>

            <div class="register">
                <p>Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký", "Register", "Account")</p>
            </div>
        }

        <div class="social-login">
            <hr>
            <h5>Hoặc đăng nhập bằng</h5>
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new eParty.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        /* === Particle Config === */
        particlesJS("particles-js", {
            particles: {
                number: { value: 60 },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.4 },
                size: { value: 3 },
                line_linked: { enable: true, distance: 150, color: "#ffffff", opacity: 0.3, width: 1 },
                move: { enable: true, speed: 1.5 }
            },
            interactivity: {
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" }
                }
            },
            retina_detect: true
        });
    </script>
</body>
</html>
