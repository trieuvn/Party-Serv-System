@model eParty.Models.NewsDetailViewModel
@{
    ViewBag.Title = Model.News.Name;
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

<!-- News Detail Section -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- News Header -->
                <div class="mb-5">
                    <div class="mb-3">
                        <span class="badge bg-primary">@Model.News.Status</span>
                        @if (Model.News.IsPublished)
                        {
                            <span class="badge bg-success">Đã xuất bản</span>
                        }
                    </div>
                    <h1 class="display-5 mb-4">@Model.News.Name</h1>

                    <div class="d-flex mb-4">
                        <small class="me-3">
                            <i class="far fa-user text-primary me-2"></i>@(Model.News.Author?.GetFullName() ?? Model.News.User ?? "Ẩn danh")
                        </small>
                        <small class="me-3">
                            <i class="far fa-calendar text-primary me-2"></i>@Model.News.CreatedDate.ToString("dd/MM/yyyy")
                        </small>
                        <small class="me-3">
                            <i class="far fa-eye text-primary me-2"></i>@Model.News.ViewCount lượt xem
                        </small>
                        <small>
                            <i class="far fa-star text-warning me-2"></i>@Model.AverageRating.ToString("0.0") sao
                        </small>
                    </div>

                    <h4 class="text-primary mb-3">@Model.News.Subject</h4>
                </div>

                <!-- News Image -->
                @if (!string.IsNullOrEmpty(Model.News.Image))
                {
                    <div class="mb-5">
                        <img src="data:image/jpeg;base64,@Model.News.GetImageSrc()" class="img-fluid rounded w-100" alt="@Model.News.Name">
                    </div>
                }

                <!-- News Content -->
                <div class="mb-5">
                    <p class="lead">@Html.Raw(Model.News.Description)</p>
                </div>

                <hr class="my-5" />

                <!-- Comments Section -->
                <div class="comments-section">
                    <h3 class="mb-4">
                        Đánh giá & Bình luận
                        <span class="badge bg-secondary">@Model.TotalComments</span>
                    </h3>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Add Comment Form -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        var userComment = Model.Comments.FirstOrDefault(c => c.User == User.Identity.Name);

                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">@(userComment != null ? "Chỉnh sửa đánh giá của bạn" : "Viết đánh giá")</h5>

                                @using (Html.BeginForm("AddComment", "News", FormMethod.Post, new { @class = "mt-3" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.Hidden("NewsId", Model.News.Id)

                                    <div class="mb-3">
                                        <label class="form-label">Đánh giá của bạn</label>
                                        <div class="star-rating">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Stars" id="star1" value="1" @(userComment?.Stars == 1 ? "checked" : "") required>
                                                <label class="form-check-label" for="star1">⭐ 1 sao</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Stars" id="star2" value="2" @(userComment?.Stars == 2 ? "checked" : "") required>
                                                <label class="form-check-label" for="star2">⭐ 2 sao</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Stars" id="star3" value="3" @(userComment?.Stars == 3 ? "checked" : "") required>
                                                <label class="form-check-label" for="star3">⭐ 3 sao</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Stars" id="star4" value="4" @(userComment?.Stars == 4 ? "checked" : "") required>
                                                <label class="form-check-label" for="star4">⭐ 4 sao</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Stars" id="star5" value="5" @(userComment?.Stars == 5 ? "checked" : "") required>
                                                <label class="form-check-label" for="star5">⭐ 5 sao</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="Description" class="form-label">Nội dung</label>
                                        <textarea class="form-control" id="Description" name="Description" rows="4" placeholder="Chia sẻ suy nghĩ của bạn về tin tức này..." required>@(userComment != null ? userComment.Description : "")</textarea>
                                        @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-paper-plane me-2"></i>@(userComment != null ? "Cập nhật" : "Gửi đánh giá")
                                        </button>
                                    </div>
                                }
                                @if (userComment != null)
                                {
                                    using (Html.BeginForm("DeleteComment", "News", FormMethod.Post, new { @class = "d-inline mt-2" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("newsId", Model.News.Id)
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa đánh giá này?')">
                                            <i class="fas fa-trash me-2"></i>Xóa đánh giá
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Vui lòng <a href="@Url.Action("Login", "Account", new { returnUrl = Request.Url.PathAndQuery })" class="alert-link">đăng nhập</a> để viết đánh giá.
                        </div>
                    }

                    <!-- Display Comments -->
                    <div class="mt-4">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            <h5 class="mb-3">Tất cả đánh giá</h5>
                            foreach (var comment in Model.Comments)
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="fas fa-user-circle text-primary me-2"></i>
                                                    @(comment.UserRef?.GetFullName() ?? comment.User)
                                                </h6>
                                                <div class="text-warning mb-2">
                                                    @for (int i = 0; i < comment.Stars; i++)
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                    @for (int i = comment.Stars; i < 5; i++)
                                                    {
                                                        <i class="far fa-star"></i>
                                                    }
                                                    <span class="text-muted ms-2">(@comment.Stars sao)</span>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="mb-0">@comment.Description</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-light">
                                <i class="fas fa-comments me-2"></i>Chưa có đánh giá nào. Hãy là người đầu tiên đánh giá!
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 100px;">
                    <!-- Rating Summary -->
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <h5 class="card-title">Đánh giá trung bình</h5>
                            <div class="display-4 text-warning">
                                @Model.AverageRating.ToString("0.0")
                            </div>
                            <div class="text-warning mb-2">
                                @for (int i = 0; i < (int)Math.Round(Model.AverageRating); i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (int i = (int)Math.Round(Model.AverageRating); i < 5; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            </div>
                            <p class="text-muted mb-0">Dựa trên @Model.TotalComments đánh giá</p>
                        </div>
                    </div>

                    <!-- Article Info -->
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Thông tin bài viết</h5>
                            <ul class="list-unstyled mb-0">                               
                                <li class="mb-2">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    <strong>Ngày đăng:</strong> @Model.News.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-eye text-primary me-2"></i>
                                    <strong>Lượt xem:</strong> @Model.News.ViewCount
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-tag text-primary me-2"></i>
                                    <strong>Trạng thái:</strong> @Model.News.Status
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

