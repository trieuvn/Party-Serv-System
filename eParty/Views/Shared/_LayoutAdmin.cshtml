@{
    var title = ViewBag.Title ?? "Dashboard";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Basic Page Info -->
    <meta charset="utf-8" />
    <title>@title - CaterServ Admin Dashboard</title>

    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" />

    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/Content/admin/calendar/vendors/images/apple-touch-icon.png")" />
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/Content/admin/calendar/vendors/images/favicon-32x32.png")" />
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/Content/admin/calendar/vendors/images/favicon-16x16.png")" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Bootstrap core CSS -->
    <link href="/Content/admin/dashboard/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="/Content/admin/dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!-- CSS from first head -->
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/calendar/vendors/styles/core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/calendar/vendors/styles/icon-font.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/calendar/src/plugins/datatables/css/dataTables.bootstrap4.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/calendar/src/plugins/datatables/css/responsive.bootstrap4.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/calendar/vendors/styles/style.css")" />

    <!-- Custom styles from second head -->
    <link href="/Content/admin/dashboard/css/ruang-admin.min.css" rel="stylesheet" />

    <!-- Render optional styles -->
    @RenderSection("Styles", required: false)

    <!-- (Optional) Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119386393-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-119386393-1');
    </script>
</head>

<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
                <div class="sidebar-brand-icon">
                    <img src="/Content/admin/dashboard/img/logo/logo2.png" alt="logo" />
                </div>
                <div class="sidebar-brand-text mx-3">RuangAdmin</div>
            </a>

            <hr class="sidebar-divider my-0" />

            <ul class="navbar-nav">
                <li class="nav-item @(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Dashboard")">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item @(ViewBag.ActiveMenu == "Calendar" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Calendar")">
                        <i class="fas fa-utensils"></i>
                        <span style="margin-left: 5px;">Calendar</span>
                    </a>
                </li>
                <li class="nav-item @(ViewBag.ActiveMenu == "Food" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Food")">
                        <i class="fas fa-utensils"></i>
                        <span style="margin-left: 5px;">Food</span>
                    </a>
                </li>
            </ul>


            <!-- thêm menu khác tại đây -->
        </ul>
        <!-- End Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-navbar topbar mb-4 static-top">
                    <button id="sidebarToggleTop" class="btn btn-link rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <ul class="navbar-nav ml-auto">
                        <!-- User -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img class="img-profile rounded-circle" src="/Content/admin/dashboard/img/boy.png" style="max-width: 60px" />
                                <span class="ml-2 d-none d-lg-inline text-white small">Admin</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- End Topbar -->
                <!-- Main Content -->
                <div class="container-fluid" id="container-wrapper">
                    @RenderBody()
                </div>
                <!-- End Main Content -->
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; RuangAdmin @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/Content/admin/dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="/Content/admin/dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Content/admin/dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/admin/dashboard/js/ruang-admin.min.js"></script>
    <!-- JS -->
    <script src="/Content/admin/calendar/vendors/scripts/core.js"></script>
    <script src="/Content/admin/calendar/vendors/scripts/script.min.js"></script>
    <script src="/Content/admin/calendar/vendors/scripts/process.js"></script>
    <script src="/Content/admin/calendar/vendors/scripts/layout-settings.js"></script>

    <!-- Plugins (tuỳ trang có thể không cần tất cả) -->
    <script src="/Content/admin/calendar/src/plugins/apexcharts/apexcharts.min.js"></script>
    <script src="/Content/admin/calendar/src/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Content/admin/calendar/src/plugins/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Content/admin/calendar/src/plugins/datatables/js/dataTables.responsive.min.js"></script>
    <script src="/Content/admin/calendar/src/plugins/datatables/js/responsive.bootstrap4.min.js"></script>

    <script src=Content/admin/calendar/vendors/scripts/dashboard.js")"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
